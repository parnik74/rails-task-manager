<div class="container mt-5">
  <%= simple_form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed %>
    <%= f.check_box :completed, input_html: { checked: @task.completed } %>
    <%= f.submit %>
  <% end %>
</div>