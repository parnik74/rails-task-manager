<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>  

<%= link_to "Back to list", tasks_path, class: "btn btn-success" %>

<%= link_to "Destroy this task",
            task_path(@task),
            method: :delete,
            class: "btn btn-danger",
            data: { confirm: 'Are you sure???'} %>

<%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-info" %>
